<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="security.cbc.com.appsecurity.MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/plomoClaro">

    <View
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/view1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/logocbc"
        android:id="@+id/imageView12" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/view23" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:src="@drawable/iconsecurity"
        android:id="@+id/imageView5" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/view2" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingLeft="@dimen/padingLogin"
        android:paddingRight="@dimen/padingLogin">

        <TableRow>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/usuariop"
                android:id="@+id/usuariop" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:id="@+id/editText"
                android:hint="@string/hin_titulo_usuario"
                android:layout_above="@+id/textView3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/letraTitulo"
                android:textColor="@color/blanco"/>
        </TableRow>
        <TableRow>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/contrasenap"
                android:id="@+id/imageView" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/editText2"
                android:hint="@string/hin_titulo_contrasena"
                android:layout_above="@+id/button"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/letraTitulo"
                android:textColor="@color/blanco"/>
        </TableRow>
        <Button
            android:text="@string/tbtn_ingresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="ingresarSistema"
            android:textAlignment="center"
            android:textColor="@color/plomoClaro"
            android:background="@color/plomo" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:id="@+id/view" />
        <TextView
            android:text="Recupera ContraseÃ±a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="@color/azuloscuro"
            android:textSize="@dimen/letraTitulo1"
            android:textAlignment="center"
            tools:textStyle="bold" />

    </TableLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/view3" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/menu"
        android:id="@+id/imageView4"
        android:paddingLeft="400dp"/>

</LinearLayout>
